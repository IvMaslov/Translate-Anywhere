{
  "author": "Maslov Ivan",

  "manifest_version": 2,
  "name": "Translate Anywhere",
  "version": "1.0.0",

  "description": "View translation easily as you browse the web. Double-click any word to view its translation in a small pop-up bubble.",

  "icons": {
    "64": "icons/translation-64.png",
    "128": "icons/translation-128.png"
  },
  
  "browser_action": {
    "default_icon": "icons/translation-64.png",
    "default_title": "Translate Anywhere",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "common/browser-polyfill.js",
        "content_scripts/dictionary.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "common/browser-polyfill.js",
      "background/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking"
  ]
}
